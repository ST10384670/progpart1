@model IEnumerable<st10384670proggggg.Models.Docs>

@{
    ViewData["Title"] = "Documents";
}

<div class="min-vh-100 d-flex flex-column"
     style="background: linear-gradient(135deg, #f8bbd0, #e1bee7, #bbdefb);">

    <div class="container mt-5 mb-5">
        <div class="card shadow-lg border-0 rounded-4">
            <!-- Cute Header -->
            <div class="card-header bg-gradient"
                 style="background: linear-gradient(90deg, #7e57c2, #42a5f5);">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0 text-white fw-bold">📚 My Cute Documents</h3>

                    <!-- Dropdown instead of plain link -->
                    <div class="dropdown">
                        <button class="btn btn-light rounded-pill fw-bold dropdown-toggle"
                                type="button" id="createDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-plus-circle"></i> New
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="createDropdown">
                            <li><a class="dropdown-item" asp-action="Create"><i class="bi bi-file-earmark-plus"></i> Create Document</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-upload"></i> Upload File</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-cloud-arrow-up"></i> Import from Cloud</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Table body -->
            <div class="card-body bg-white rounded-bottom-4">
                <table class="table table-hover align-middle text-center">
                    <thead style="background: #ede7f6; color: #4527a0;">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.DocsId)</th>
                            <th>@Html.DisplayNameFor(model => model.Title)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                            <th>@Html.DisplayNameFor(model => model.FileSize)</th>
                            <th>@Html.DisplayNameFor(model => model.LecturerId)</th>
                            <th>✨ Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.DocsId)</td>
                                <td class="fw-semibold">@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                                <td>@Html.DisplayFor(modelItem => item.FileSize)</td>
                                <td>@Html.DisplayFor(modelItem => item.LecturerId)</td>
                                <td>
                                    <!-- Cute Dropdown for actions -->
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-primary rounded-pill dropdown-toggle"
                                                type="button" id="actionDropdown-@item.DocsId" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-gear"></i> Manage
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="actionDropdown-@item.DocsId">
                                            <li>
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.DocsId">
                                                    <i class="bi bi-pencil-square text-primary"></i> Edit
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-action="Details" asp-route-id="@item.DocsId">
                                                    <i class="bi bi-eye text-info"></i> View Details
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.DocsId">
                                                    <i class="bi bi-trash text-danger"></i> Delete
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
