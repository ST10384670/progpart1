@model IEnumerable<st10384670proggggg.Models.Docs>

@{
    ViewData["Title"] = "Docs";
}

<div class="min-vh-100 d-flex flex-column"
     style="background: linear-gradient(135deg, #fce4ec, #e3f2fd);">

    <div class="container mt-5 mb-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h3 class="mb-0">📂 Documents List</h3>
                <a asp-action="Create" class="btn btn-light text-dark fw-bold">
                    <i class="bi bi-plus-circle"></i> Create New Document
                </a>
            </div>

            <div class="card-body bg-white rounded-bottom-4">
                <table class="table table-striped table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.DocsId)</th>
                            <th>@Html.DisplayNameFor(model => model.Title)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                            <th>@Html.DisplayNameFor(model => model.FileSize)</th>
                            <th>@Html.DisplayNameFor(model => model.LecturerId)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.DocsId)</td>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                                <td>@Html.DisplayFor(modelItem => item.FileSize)</td>
                                <td>@Html.DisplayFor(modelItem => item.LecturerId)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.DocsId" class="btn btn-sm btn-primary me-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.DocsId" class="btn btn-sm btn-info text-white me-1">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.DocsId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
