@model IEnumerable<st10384670proggggg.Models.Claim>

@{
    ViewData["Title"] = "Claims";
}

<div class="min-vh-100 d-flex flex-column"
     style="background: linear-gradient(135deg, #e3f2fd, #f1f8e9);">

    <div class="container mt-5 mb-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h3 class="mb-0">📑 Claims List</h3>
                <a asp-action="Create" class="btn btn-light text-primary fw-bold">
                    <i class="bi bi-plus-circle"></i> Create New Claim
                </a>
            </div>

            <div class="card-body bg-white rounded-bottom-4">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ClaimId)</th>
                            <th>@Html.DisplayNameFor(model => model.ClaimTitle)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.DateFiled)</th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                            <th>@Html.DisplayNameFor(model => model.DocsId)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.ClaimId)</td>
                                <td>@Html.DisplayFor(modelItem => item.ClaimTitle)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>@item.DateFiled.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <span class="badge
                                        @(item.Status == "Approved" ? "bg-success" :
                                          item.Status == "Rejected" ? "bg-danger" : "bg-warning text-dark")">
                                        @item.Status
                                    </span>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.DocsId)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.ClaimId" class="btn btn-sm btn-primary me-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.ClaimId" class="btn btn-sm btn-info text-white me-1">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ClaimId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

